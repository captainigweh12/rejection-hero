{
  "cli": {
    "version": ">= 13.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "newArchEnabled": false
      },
      "ios": {
        "simulator": false
      }
    },
    "expo-go": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "newArchEnabled": false
      },
      "ios": {
        "simulator": true,
        "newArchEnabled": false
      },
      "env": {
        "EXPO_PUBLIC_ENABLE_EXPO_GO": "true"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "credentialsSource": "remote"
      },
      "ios": {
        "simulator": false
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./secrets/google-play-service-account.json",
        "track": "internal"
      },
      "ios": {
        "ascAppId": "your-app-store-connect-app-id"
      }
    }
  }
}
