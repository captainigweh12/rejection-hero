{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun run --hot src/index.ts",
    "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target bun",
    "start": "NODE_ENV=production bun run src/index.ts",
    "studio": "prisma studio --port 3001 --hostname 0.0.0.0",
    "postinstall": "prisma generate",
    "typecheck": "tsc --noEmit",
    "db:push": "prisma db push --accept-data-loss --skip-generate",
    "db:migrate": "prisma migrate deploy",
    "db:setup": "bun run postinstall && bun run db:push"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "neonctl": "^2.18.1",
    "prisma": "^6.17.1"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@better-auth/expo": "1.3.24",
    "@hono/node-server": "1.12.0",
    "@hono/zod-validator": "0.7.3",
    "@prisma/client": "^6.17.1",
    "better-auth": "1.3.24",
    "hono": "4.6.0",
    "stripe": "^20.0.0",
    "zod": "4.1.11"
  }
}
