{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["./shared/*"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "shared/**/*.ts", "shared/**/*.tsx", "nativewind-env.d.ts", "App.tsx"],
  "exclude": ["node_modules", "backend/node_modules", "backend/generated", ".expo", "**/node_modules/**", "node_modules/react-native-maps", "**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"]
}
